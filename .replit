modules = ["postgresql-16", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NextJS Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Express Server"

[[workflows.workflow]]
name = "NextJS Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd next.js-frontend && npm install && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Express Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd next.js-frontend && npm install && npm run dev"]

[[ports]]
localPort = 5000
externalPort = 80
